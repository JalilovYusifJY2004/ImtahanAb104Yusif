@using FinalExamYusif.Areas.Admin.ViewModels.Service;
@model UpdateServiceVM


<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Basic form elements</h4>
            <p class="card-description">
                Basic form elements
            </p>
            <form class="forms-sample" method="post" enctype="multipart/form-data">
                 <div class="form-group">
                <img width="150px" height="150px" src="~/assets/images/@Model.Image"/>
                    <input asp-for="Image" class="form-control" id="exampleInputName1" placeholder="Image">
                    <span asp-validation-for="Image"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Photo" for="exampleInputName1">Photo</label>
                    <input asp-for="Photo"  class="form-control" id="exampleInputName1" placeholder="Photo">
                    <span asp-validation-for="Photo"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Name" for="exampleInputName1">Name</label>
                    <input asp-for="Name" type="text" class="form-control" id="exampleInputName1" placeholder="Name">
                    <span asp-validation-for="Name"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description" for="exampleInputName1">Description</label>
                    <input asp-for="Description" type="text" class="form-control" id="exampleInputName1" placeholder="Description">
                    <span asp-validation-for="Description"></span>
                </div>

                <button type="submit" class="btn btn-primary me-2">Submit</button>
                <a asp-action="Index" asp-controller="service">Cancel</a>
            </form>
        </div>
    </div>
</div>