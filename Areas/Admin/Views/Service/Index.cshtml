@using FinalExamYusif.Models;
@model List<Service> 
@{
    int count = 0;
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Create Table</h4>
            <a class="btn btn-success" asp-action="create" asp-controller="service" >Create</a>
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>
                             No
                            </th>
                            <th>
                            Name
                            </th>
                            <th>
                                Description
                            </th>
                            <th>
                            Image
                            </th>
                            <th>
                             Settings
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                    @foreach (Service service in Model)
                        {
                            count++;
                            <tr>
                                <td>
                                   @count
                                </td>
                                <td>
                                @service.Name
                                </td>
                                <td>
                             @service.Description
                                </td>
                                <td class="py-1">
                                    <img src="~/assets/images/@service.Image" alt="image" />
                                </td>
                                <td>
                                  <a asp-action="Update" asp-controller="service" asp-route-id="@service.Id" class="btn btn-success">Update</a>
                                    <a asp-action="Delete" asp-controller="service" asp-route-id="@service.Id" class="btn btn-success">Delete</a>
                                </td>
                            </tr>
                        }
                    
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
